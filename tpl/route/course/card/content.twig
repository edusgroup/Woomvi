{# Шаблон для видео в курсах #}

{% extends "global/index.twig" %}

{% block head %}
    <link href="/res/sass/bin/test-card.css" rel="stylesheet"/>
    <link href="/res/sass/bin/course/trashMistake.css" rel="stylesheet"/>
    <link href="/res/bower_package/perfect-scrollbar/css/perfect-scrollbar.min.css" rel="stylesheet"/>
{% endblock %}

{% block footer %}
    <script src="/res/plugin/jplayer/jquery.jplayer.min.js"></script>
    <script src="/res/js/course/card.js"></script>
{% endblock %}

{% block content %}

    <style>
        .item-list .panel-button .item-btn.hide,  .item-list .panel-button .item-btn.translate{
            background-color: transparent;
        }
    </style>

    <div id="maincontentcontainer">
        <div id="maincontent" class="container">
            <div id="wumvi-card-box">

                <div class="item-list">
                    {% for id,item in cardList %}
                        {% include 'route/course/card/item.twig' %}
                    {% endfor %}
                </div>


                <div class="next-level-box">
                      <a href="{{ route('material.card.nextlevel', cardName) }}" class="btn">
                        Я выучил(а) глаголы. Открыть следующий курс
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="player-box"></div>
{% endblock %}