        .course-list{
            overflow: hidden;
        }

       .course-list .item{
            height: 234px;
            background: #fff;
            float: left;
            overflow: hidden;
           margin: 15px 4px 4px 15px;
            cursor: pointer;
            position: relative;
            display: inline-block;
            width: 252px;
            text-decoration: none;

            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;


