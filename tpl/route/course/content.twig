            box-shadow: 1px 1px 2px 1px rgba(0,0,0,0.07);
        }

        .course-list .item .preview{
            position: relative;
        }

        .course-list .item.lock .lock{
            display: none;
            position: absolute;
            bottom: -20px;
            right: 20px;
            background: url('/res/img/raznoe/lock.png');
            width: 41px;
            height: 62px;
        }

        .course-list .item.lock .lock{
