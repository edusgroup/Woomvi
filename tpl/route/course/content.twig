        }

        .course-list .item img{
            display: block;
            width: 100%;
            height: 152px;
            vertical-align: top;
        }

        .course-list .item .preview.disable .preview {
            opacity: 0.2;
            /* IE 8 */
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=20)";
        }

        .course-list .item .text{
            display: block;
            height: 234px;
            padding: 0 15px;
            text-decoration: none;
            position: absolute;
            width: 100%;
            background-color: white;
            top: 152px;

            -moz-transition-duration: 0.28s;
            -o-transition-duration: 0.28s;
            -webkit-transition-duration: 0.28s;
            transition-duration: 0.28s;
        }

        .course-list .item:hover .text, .course-list .item.hover .text{
            top: 0;

        }
        
        .course-list .item .txt-preview{
