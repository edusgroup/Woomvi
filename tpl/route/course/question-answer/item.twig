{% extends "global/index.twig" %}

{% block head%}
    <link href="/res/css/course/test-box.css" rel="stylesheet"/>
{% endblock %}

{% block footer %}
    <script src="/res/js/wumvi/TestForm.js"></script>
    <script>
        new wumvi.TestForm('#wumvi-question-answer');
    </script>
{% endblock %}

{% block content %}
    <style>

        #wumvi-question-answer .header{
            text-align: center;
        }

        #wumvi-question-answer .next-level-box{
            margin-top: 20px;
            text-align: center;
        }

        #wumvi-question-answer .next-level-box .btn:hover{
            background: #5fcf2d;
            color: #fff;
        }

        .test-box .item-list .item .question-header{
            background: url('/res/img/bg-item.png') no-repeat top center #fff;
        }
    </style>

    <div id="maincontentcontainer">
        <div id="maincontent">


            <div id="wumvi-question-answer" class="test-box">
                <div class="header">
                    <img src="/res/img/course/question/caption.png"/>
                </div>
                <div class="item-list">
                    {% for item in questionList %}
                        <div class="item">
                            <div class="question-box">
                                <div class="box question-header"></div>
                                <div class="box question-text">
                                    {{ item.questionText }}
                                </div>
                                <div class="box wrong-text">
                                    {{ item.sentenseText }}

                                </div>
                                <div class="box panel-bottom"></div>
                                <div class="panel-button">
                                    <a href="#" class="btn check">Показать ответ</a>
                                </div>
                                <div class="answer-status">
                                    <img src="/res/img/wrong.png" class="wrong"/>
                                    <img src="/res/img/ok.png" class="right"/>
                                </div>
                            </div>

                            <div class="answer-box">
                                <div class="box question-header"></div>
                                <div class="">
                                    <div class="box answer-text">
                                        <h2>Ответ</h2>
                                        {{ item.answerText }}
                                    </div>
                                    <a href="#" class="close">
                                        <img src="/res/img/sprite/close.png"/>
                                    </a>
                                </div>
                            </div>

                        </div>
                    {% endfor %}
                </div>

                <div class="next-level-box">
                    <a href="{{ route('course.trash-mistake.nextlevel', questionName) }}" class="btn">
                        Я прошёл все тесты. Открыть следующий курс
                    </a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}